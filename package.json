{
  "name": "dotcontext",
  "version": "1.3.6",
  "type": "module",
  "description": "A CLI tool for managing and validating codebase context specifications",
  "main": "dist/index.js",
  "bin": {
    "dotcontext": "dist/index.js",
    "dotcontext-mcp": "dist/mcp.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "cd . & npm run build & jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev --respawn src/index.ts",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "mcp": "node dist/mcp.js",
    "inspector": "npx @modelcontextprotocol/inspector dist/mcp.js"
  },
  "keywords": [
    "cli",
    "codebase-context",
    "documentation",
    "linter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "commander": "^11.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "jest": "^29.6.2",
    "semantic-release": "^22.0.12",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "build",
              "release": "patch"
            },
            {
              "type": "ci",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "."
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/**"
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
